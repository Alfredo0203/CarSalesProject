@using DAL.Models
@model List<tabDetalleCompras>
@{
    var Compras = ViewBag.Compras;
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DetalleCompras</title>
    <link href="~/Content/Diseños/Table.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @if (Model.Count() > 0)
                {
                    <center>
                        <h1>Compras</h1>
                        <br />
                        <table>
                            <thead>
                                <tr>
                                    <th>fECHA</th>
                                    <th>TOTAL</th>
                                    <th>DETALLE COMPRAS</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var com in Compras)
                                {
                                    <tr>


                                        <td> @com.Fecha</td>
                                        <td> $ @com.Total</td>

                                        <td>
                                            <table style="margin-top:1px;">
                                                <thead>
                                                    <tr>

                                                        <th>Marca y Modelo </th>
                                                        <th>Cantidad </th>
                                                        <th>Precio Compra</th>
                                                        <th>SubTotal</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.Count() > 0)
                                                    {
                                                        foreach (var prod in Model)
                                                        {
                                                            if (prod.idCompra == com.IdCompra)
                                                            {
                                                                <tr>

                                                                    <td>@prod.marcaModelo</td>
                                                                    <td>@prod.cantidad</td>
                                                                    <td>@prod.precioCompra</td>
                                                                    <td>@prod.subTotal</td>


                                                                </tr>
                                                            }
                                                        }
                                                    }

                                                </tbody>
                                            </table>

                                        </td>
                                    </tr>


                                }
                            </tbody>
                        </table>
                    </center>
                }
            </div>
        </div>
    </div>
</body>
</html>
