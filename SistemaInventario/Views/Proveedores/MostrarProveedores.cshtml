@using DAL.Models
@model List<tabProveedores>
@{
    ViewBag.Title = "MostrarProveedores";
}

<!--class="container"-->
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <button style="margin-bottom: -230px" class="btn agregarBtn" onclick="window.location.href = '/Proveedores/EditOrAddProveedores'">
                <i class="fas fa-plus"></i> Agregar
            </button>
            <br />
            @if (Model.Count() > 0)
            {
                <center>
                    <h1>Proveedores</h1>
                </center>
                <br />
                <br />

                <!--table-striped-->
                <table class="table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Teléfono</th>
                            <th>Dirección</th>
                            <th colspan="2">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.idProveedor</td>
                                <td>@i.proveedor</td>
                                <td>@i.telefono</td>
                                <td>@i.direccion</td>
                                <td width="20">
                                    <!-- style="background-color: #82E897"-->
                                    <button class="btn btn-info"
                                            onclick="window.location.href = '/Proveedores/EditOrAddProveedores?idProveedor='+@i.idProveedor">
                                        <i class="fas fa-pencil-alt"></i>
                                        Editar
                                    </button>
                                </td>
                                <td width="20">
                                    <button class="btn btn-danger"
                                            onclick="AlertaDelete('/Proveedores/EliminarProveedor?idProv='+@i.idProveedor)">
                                        <i class="fas fa-trash-alt"></i> Eliminar
                                    </button>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            }
            else
            {
            <h2> ¡No hay marcas registradas! </h2>
            }
        </div>
    </div>
</div>