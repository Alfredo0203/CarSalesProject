@using DAL.Models;
@model List<tabClientes>
@{
    ViewBag.Title = "MostrarUsuarios";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center><h1>Lista Usuarios</h1></center>
            <br />
            <button class="btn btn-success" onclick="window.location.href='/Usuario/CreateOrEditUsuario'">Agregar</button>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Contraseña</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var u in Model)
                        {
                            <tr>
                                <td>@u.nombre</td>
                                <td>@u.telefono</td>
                               
                               
                            </tr>

                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>