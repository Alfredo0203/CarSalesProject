@using DAL.Models;
@model List<tabClientes>
@{
    ViewBag.Title = "MostrarClientes";
}
@if (TempData["Message"] != null)
{
<div class="alert alert-success alert-dismissable col-md-4 text-center" role="alert" style="margin-top: 10px; width: 35rem;">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <b>@TempData["Message"]</b>
</div>
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h1>Lista Clientes</h1></center>
            <br />
            <button class="btn agregarBtn" onclick="window.location.href='/Clientes/AgregarOEditarClientes'"><i class="fas fa-plus"></i> Agregar</button>

            <br />
            <table class="table-hover table-striped">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Telléfono</th>
                        <th>Dirección</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var cl in Model)
                        {
                    <tr>
                        <td>@cl.nombre</td>
                        <td>@cl.telefono</td>
                        <td>@cl.direccion</td>
                        <td width="20">
                      
                            <button class="btn btn-info "
                               onclick="window.location.href = '/Clientes/AgregarOEditarClientes?idCliente='+@cl.idCliente"><i class="fas fa-pencil-alt"></i> Editar</button>
                        </td>
                        <td width="20">
                        <button class="btn btn-danger"
                           onclick="window.location.href = '/Clientes/EliminarClientes?id='+@cl.idCliente"><i class="fas fa-trash-alt"></i> Eliminar</button>
                            </td>
                    </tr>

                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
