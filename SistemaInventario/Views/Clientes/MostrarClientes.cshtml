@using DAL.Models;
@model List<tabClientes>
@{
    ViewBag.Title = "MostrarClientes";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center><h1>Lista Clientes</h1></center>
            <br />
            <button class="btn btn-success" onclick="window.location.href='/Clientes/AgregarClientes'">Agregar </button>
            <br />
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Telléfono</th>
                        <th>Dirección</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var cl in Model)
                        {
                            <tr>
                                <td>@cl.nombre</td>
                                <td>@cl.telefono</td>
                               <td>@cl.direccion</td>
                               
                            </tr>

                        }

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>