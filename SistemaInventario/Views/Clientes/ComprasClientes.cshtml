@using DAL.Models

@model List<tabDetalleVentas>
@{
    ViewBag.Title = "MostrarProductos";
    var ventas = ViewBag.MisCompras;
    int idCliente = ViewBag.IdCliente;
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <center>
                <br />
                <br />
                <br />
                <h1>Mis compras</h1>

            </center>
            <br />


            @if (ventas != null)
            {
                <br />
                <table class="table ">
                    <thead>
                        <tr>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ven in ventas)
                        {
                            if (ven.FkCliente == idCliente)
                            {
                                <tr style="padding: 0; margin:0; background-color: cornflowerblue">
                                   
                                    <td>@if(ViewBag.NombreCliente != null){@ViewBag.NombreCliente}</td>
                                    <td> @ven.Fecha</td>
                                    <td> $ @ven.Total</td>

                                    <td>
                                        <table class="table " style="padding: 0; margin:0; border: solid 2px black">
                                            <thead style="background-color: darkgray; padding: 0; margin: 0; border: solid 2px black">
                                                <tr style="border: solid 2px black; text-align: center">

                                                    <th>Marca y Modelo </th>
                                                    <th>Cantidad </th>
                                                    <th>Precio Venta</th>
                                                    <th>SubTotal</th>
                                                    <th rowspan="2">
                                                        <button class="btn btn-success"
                                                                onclick="window.location.href=''">
                                                            Ver Detalles
                                                        </button>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Count() > 0)
                                                {
                                                    foreach (var prod in Model)
                                                    {
                                                        if (prod.idVenta == ven.IdVenta)
                                                        {
                                                            <tr style="border: solid 2px black; text-align: center">

                                                                <td>@prod.marcaModelo</td>
                                                                <td>@prod.cantidad</td>
                                                                <td>@prod.precio</td>
                                                                <td>@prod.subTotal</td>


                                                            </tr>
                                                        }
                                                    }
                                                }

                                            </tbody>
                                        </table>

                                    </td>
                                </tr>


                            }

                        }

                    </tbody>
                </table>


            }


        </div>
    </div>
</div>









