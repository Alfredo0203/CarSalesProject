@using DAL.Models
@model List<tabDetalleCompras>
@{
    ViewBag.Title = "MostrarCompras";
    var Compras = ViewBag.Compras;
}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <br />
               
                <br />
                @if (Model.Count() > 0)
                {
                    <button style="margin-bottom: -175px; margin-left: 200px" class="btn btn-danger" onclick="window.location.href = '/Reportes/ImprimirDetalleComprasProveedor'">
                        <i class="fas fa-print"></i> PDF</button>
                   
                        <center>
                        <h1>Compras</h1>
                        <br />
                        <br />
                        <table>
                            <thead>
                                <tr>
                                    <th>fECHA</th>
                                    <th>TOTAL</th>
                                    <th>DETALLE COMPRAS</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var com in Compras)
                                {
                                    <tr>


                                        <td> @com.Fecha</td>
                                        <td> $ @com.Total</td>

                                        <td>
                                            <table style="margin-top:1px;">
                                                <thead>
                                                    <tr>

                                                        <th>Marca y Modelo </th>
                                                        <th>Cantidad </th>
                                                        <th>Precio Compra</th>
                                                        <th>SubTotal</th>

                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (Model.Count() > 0)
                                                    {
                                                        foreach (var prod in Model)
                                                        {
                                                            if (prod.idCompra == com.IdCompra)
                                                            {
                                                                <tr>

                                                                    <td>@prod.marcaModelo</td>
                                                                    <td>@prod.cantidad</td>
                                                                    <td>@prod.precioCompra</td>
                                                                    <td>@prod.subTotal</td>


                                                                </tr>
                                                            }
                                                        }
                                                    }

                                                </tbody>
                                            </table>

                                        </td>
                                    </tr>


                                }


                            </tbody>
                        </table>
                    </center>
                }
                else
                {
                    <br />
                    <center><h2 style="color: red">Aún no ha realizado compras</h2></center>
                    <center><h2 class="cajaCompra"><i class="fas fa-box-open"></i></h2></center>
                }

            </div>
        </div>
    </div>


