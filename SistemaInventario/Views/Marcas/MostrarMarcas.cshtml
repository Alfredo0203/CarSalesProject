@using DAL.Models;
@model List<tabMarcas>
@{
    ViewBag.Title = "MostrarMarcas";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h1>Marcas</h1></center>
            <br />
            <button class="btn agregarBtn" onclick="window.location.href='/Marcas/AgregarOEditarMarcas'"><i class="fas fa-plus"></i>Agregar Marca</button>
            <br />
            <table class="table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE</th>
                        <th colspan="2">ACCIONES</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var mar in Model)
                        {
                            <tr>
                                <td>@mar.idMarca</td>
                                <td>@mar.marca</td>
                                <td width="20">
                                    <button class="btn btn-info" onclick="window.location.href='/Marcas/AgregarOEditarMarcas?idMarca=' +@mar.idMarca"><i class="fas fa-pencil-alt"></i> Editar</button>
                                </td>
                                <td width="20">
                                    <button class="btn btn-danger" onclick="window.location.href='/Marcas/EliminarMarcas?id=' +@mar.idMarca"><i class="fas fa-trash-alt"></i> Eliminar</button>

                                </td>
                            </tr>
                        }
                    }
                    else
                    {

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>