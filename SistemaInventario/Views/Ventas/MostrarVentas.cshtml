@using DAL.Models
@model List<tabDetalleVentas>
@{
    ViewBag.Title = "MostrarVentas";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <center><h1>Listado de Autos</h1></center>
            <br />
            <button class="btn agregarBtn" onclick="window.location.href='/Ventas/AgregarOEditarVentas'">Vender</button>
            <table class="table-hover table-striped ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Cantidad</th>
                        <th>Precio</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var ven in Model)
                        {
                            <tr>
                                <td>@ven.idDetalleVenta</td>
                                <td>@ven.MarcaAuto</td>
                                <td>@ven.ModeloAuto</td>
                                <td>@ven.cantidad</td>
                                <td>$ @ven.PrecioAuto</td>
                                <td width="20">
                                    <button class="btn btn-info" onclick="window.location.href='/Ventas/AgregarOEditarVentas?id=' +@ven.idVenta">Editar</button>
                                </td>
                                <td width="20">
                                    <button class="btn btn-danger" onclick="window.location.href='/Ventas/EliminarVentas?id=' +@ven.idVenta">Eliminar</button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                <center class="text-danger">
                                    ¡No hay datos para mostrar!
                                </center>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>