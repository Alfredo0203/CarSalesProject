@using DAL.Models;
@model tabDetalleVentas
@{
    ViewBag.Title = "AgregarOEditarVentas";
}

<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
            @if (Model.idVenta > 0)
            {
                <h2>Editar venta</h2>
            }
            else
            {
                <h2>Agregar venta</h2>
            }

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.idDetalleVenta)
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Marca: </label>
                        @Html.DropDownListFor(x => x.fk_auto, (IEnumerable<SelectListItem>)ViewBag.listaAutos, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.fk_auto, null, htmlAttributes: new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Cantidad: </label>
                        @Html.TextBoxFor(x => x.cantidad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.cantidad, null, new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </div>
            }
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>
